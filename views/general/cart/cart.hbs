<div class="container-cart">
    {{#if items}}
    <div class="subTitle"> {{user.fName}} {{user.lName}}'s cart</div>
    {{#each items}}
    <div class="cartSmall">
        <img src="/uploads/{{imageUpload}}" alt="meal" />
        <div class="cartSmallDesc">
            <h5 id="mealKitTitle" value="{{title}}">{{title}}</h5>
            <h6 id="mealKitPrice" value="{{price}}">price : ${{price}}</h6>
            <h6 id="mealKitId" class="display-none" value="{{menuId}}"></h6>
            <h6 id="mealKitquantity">quantity : {{quantity}}</h6>
            <hr>
            <h6 id="mealKitItemTotalPrice">item total price : ${{itemTotalPrice}}</h6>
        </div>
    </div>
    {{/each}}
    <div class="cartTotalPrice">
        <h6 id="cartTotalPrice"> total price : ${{totalPrice}}</h6>
        <button class="btnBasic" id="btnPlaceOrder">Place order >></button>
    </div>

    {{else}}
    <div class="subTitle"> uh oh, your cart is empty now </i></div>
    <div class="subTitle upSideDown">
        <h1><i class="fas fa-shopping-cart"></i></h1>
    </div>
    <h1></h1>
    {{/if}}
</div>